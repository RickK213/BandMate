@model BandMate.Models.TourDate
@{
    ViewBag.Title = "Mark Tour Date As Paid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mark Tour Date As Paid</h2>
<div class="row">
    <div class="col-md-10 col-lg-offset-2">
        <p>
            <span class="text-info"><strong>Venue: </strong>@Model.Venue.Name</span><br />
            <span class="text-success"><strong>Appearance Fee: </strong>@String.Format("{0:C2}", Model.AppearanceFee)</span>
</p>
    </div>
</div>
<form action="/TourDate/MarkAsPaid" method="POST" class="form-horizontal">
    <input type="hidden" name="tourDateId" value="@Model.TourDateId" />

    <div class="form-group">
        <label class="control-label col-md-2">Date Paid</label>
        <div class="col-md-10">
            <div class="input-group date addon">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                <input type="text" class="form-control" name="datePaid" placeholder="MM/DD/YYYY HH:MM AM" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="submit" type="submit" value="Mark as Paid" class="btn btn-primary" />
        </div>
    </div>
</form>