@model BandMate.Models.Tour

@{
    ViewBag.Title = "Edit Tour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Tour: @Model.Name</h2>
<form action="/Tour/Edit" method="POST" class="form-horizontal">
    <input type="hidden" name="tourId" value="@Model.TourId"/>
    <div class="form-group">
        <label for="tourName" class="col-sm-2 control-label">Tour Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="tourName" value="@Model.Name">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save Tour</button>
        </div>
    </div>
</form>

