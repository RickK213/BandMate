@using BandMate.Models
@model BandMate.Models.BandEventViewModel

@{
    ViewBag.Title = "Band Events";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left">@Model.CurrentBand.Name Events</h3>
    </div>
    <div class="panel-body">
        <h4>Create New Event</h4>
        <form class="form-inline" action="/Event/Add" method="POST">
            <input type="hidden" name="bandId" value="@Model.CurrentBand.BandId" />
            <div class="form-group">
                <label for="tourName">Event Name</label>
                <input type="text" class="form-control" name="eventName" placeholder="Event Name">
            </div>
            <button type="submit" class="btn btn-primary">Create Event</button>
        </form>
        @if (Model.CurrentBandEvents.Count>0)
        {
            <hr />
            <h4>@Model.CurrentBand.Name Events</h4>
            <table class="table table-striped table-condensed table-bordered table-hover">
                <tr>
                    <th>Event Name</th>
                </tr>
                @foreach (Event bandEvent in Model.CurrentBandEvents)
                {
                    <tr>
                        <td>@bandEvent.Name</td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
