@using BandMate.Models
@model BandMate.Models.BandViewModel

@{
    ViewBag.Title = "Band Members";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left">Band Members in @Model.CurrentBand.Name</h3>
    </div>
    <div class="panel-body">
        <h4>Invite Band Member</h4>
        <form class="form-inline" action="/Band/InviteMember" method="POST">
            <input type="hidden" name="bandId" value="@Model.CurrentBand.BandId" />
            <input type="hidden" name="bandName" value="@Model.CurrentBand.Name" />
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" placeholder="band@memeber.com">
            </div>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="title" placeholder="i.e. Lead Guitarist">
            </div>
            <button type="submit" class="btn btn-primary">Send invitation</button>
        </form>
        <hr />
        <h4>Current Band Members</h4>
        @if (Model.CurrentBand.BandMembers.Count > 0)
        {
            <table class="table table-striped table-condensed table-bordered table-hover">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
                @foreach (ApplicationUser user in Model.CurrentBand.BandMembers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Title</td>
                        <td>
                            @if (user.Title != "Band Manager")
                            {
                                <a href="#" class="btn btn-xs btn-danger">Remove from Band</a>
                            }
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
