@using BandMate.Models
@model BandMate.Models.BandVenueViewModel

@{
    ViewBag.Title = "Band Venues";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left">@Model.CurrentBand.Name Venues</h3>
    </div>
    <div class="panel-body">
        <h4>Create New Venue</h4>
        <form class="form-inline" action="/Venue/Add" method="POST">
            <input type="hidden" name="bandId" value="@Model.CurrentBand.BandId" />
            <div class="form-group">
                <label for="tourName">Venue Name</label>
                <input type="text" class="form-control" name="tourName" placeholder="Venue Name">
            </div>
            <button type="submit" class="btn btn-primary">Create Venue</button>
        </form>
        @if (Model.CurrentBandVenues.Count>0)
        {
            <hr />
            <h4>@Model.CurrentBand.Name Venues</h4>
            <table class="table table-striped table-condensed table-bordered table-hover">
                <tr>
                    <th>Venue Name</th>
                </tr>
                @foreach (Venue venue in Model.CurrentBandVenues)
                {
                    <tr>
                        <td>@venue.Name</td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
