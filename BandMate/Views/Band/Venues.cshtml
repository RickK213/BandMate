@using BandMate.Models
@model BandMate.Models.BandVenueViewModel

@{
    ViewBag.Title = "Band Venues";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left">@Model.CurrentBand.Name Venues</h3>
    </div>
    <div class="panel-body">
        <a class="btn btn-s btn-primary" href="@Url.Action("Create", "Venue", new { bandId = Model.CurrentBand.BandId })"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Add New Venue</a>
        @if (Model.CurrentBandVenues.Count>0)
        {
            <hr />
            <h4>Current Venues</h4>
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th>Venue Name <small>(Click for details)</small></th>
                    <th>City, State</th>
                    <th>Contact Name</th>
                    <th>Contact Phone</th>
                    <th>Contact Email</th>
                    <th>Actions</th>
                </tr>
                @foreach (Venue venue in Model.CurrentBandVenues)
                {
                    <tr>
                        <td>
                            <a class="btn btn-xs btn-primary" href="@Url.Action("Details", "Venue", new { venueId = venue.VenueId })"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> @venue.Name</a>
                        </td>
                        <td>@venue.Address.City.Name, @venue.Address.State.Abbreviation</td>
                        <td>@venue.ContactFirstName @venue.ContactLastName</td>
                        <td>@String.Format("{0:(###) ###-####}", Convert.ToInt64(venue.ContactPhoneNumber))</td>
                        <td><a href="mailto:@venue.ContactEmail">@venue.ContactEmail</a></td>
                        <td>
                            <a class="btn btn-xs btn-info" href="@Url.Action("Edit", "Venue", new { venueId = venue.VenueId })"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Settings</a>
                            <a data-toggle="tooltip" data-placement="top" title="You Cannot Undo This!" class="btn btn-xs btn-danger" href="@Url.Action("Delete", "Venue", new { venueId = venue.VenueId })"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
