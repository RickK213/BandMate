@model BandMate.Models.BandIndexViewModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left">Settings for @Model.CurrentBand.Name</h3>
        <a href="/Band/Delete/@Model.CurrentBand.BandId" class="btn btn-danger btn-xs pull-right"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a>
    </div>
    <div class="panel-body">
        <form class="form-horizontal" action="/Band/Rename" method="Post">
            <input type="hidden" name="bandId" value="@Model.CurrentBand.BandId"/>
            <div class="form-group">
                <label for="bandName" class="col-sm-2 control-label">Band Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="bandName" value="@Model.CurrentBand.Name">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Save Band Name</button>
                </div>
            </div>
        </form>
    </div>
</div>
