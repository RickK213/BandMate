@using BandMate.Models
@model BandMate.Models.BandSetListViewModel

@{
    ViewBag.Title = "Band Set Lists";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left">@Model.CurrentBand.Name Set Lists</h3>
    </div>
    <div class="panel-body">
        @if (Model.CurrentBandSetLists.Count>0)
        {
            <hr />
            <h4>Current Set Lists</h4>
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th>Set List Name</th>
                    <th># Songs</th>
                    <th>Actions</th>
                </tr>
                @foreach (SetList setList in Model.CurrentBandSetLists)
                {
                    <tr>
                        <td>@setList.Name</td>
                        <td>@setList.SetListSongs.Count</td>
                        <td>
                            <a class="btn btn-xs btn-primary" href="@Url.Action("Details", "SetList", new { setListId = setList.SetListId })"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Set List Details</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div class="alert alert-danger">@Model.CurrentBand.Name does not have any set lists yet.</div>
        }
    </div>
</div>
